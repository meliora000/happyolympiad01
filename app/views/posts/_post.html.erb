<% if post.genre == 3 %>
    <div class="col s12 m12 l12">
      <div class="card brown lighten-5">
        <div class="card-content white-text" style="padding:0px; padding-left: 10px;">
          <div class="card-title">
            <div class="chip">
              <%= post.name %>
            </div>
            <div class="chip">
              <%= post.school %>
            </div>
            <div class="chip">
              <%= post.year %>
            </div>
          </div>


              <div class="card-content">
                <iframe width="100%" height="500px" src="<%= post.content %>" frameborder="no" scrolling="no"></iframe>
              </div>
        </div>


      </div>
    </div>
<% else %>
    <div class="col s12 m12 l6">
      <div class="card brown lighten-5">
        <div class="card-content white-text" style="padding:0px; padding-left: 10px;">
          <div class="card-title">
            <div class="chip">
              <%= post.name %>
            </div>
            <div class="chip">
              <%= post.school %>
            </div>
            <div class="chip">
              <%= post.year %>
            </div>
          </div>
          <% if post.genre == 1 %>
              <div class="card-content">
                <%= image_tag(post.avatar_url,style: 'width:100%',class:"materialboxed") if post.avatar? %>
              </div>
          <% end %>


          <% if post.genre == 2 %>
              <div class="card-content">
                <embed src="<%= post.avatar %>" width="100%" height="375" type='application/pdf'>
              </div>
          <% end %>
        </div>


      </div>
    </div>
<% end %>
